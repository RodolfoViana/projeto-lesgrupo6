<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2" >

    <!-- <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinner1"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/spinner1"
        android:text="Button" /> -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Escolher modelo do carro na lista:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editarInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:text="Valor do litro de combustivel:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextValorComb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editTextValorComb"
        android:layout_alignRight="@+id/editTextValorComb"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/editarInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="     Adicionar Carro      " />

    <Button
        android:id="@+id/cancelarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextValorComb"
        android:layout_below="@+id/editTextValorComb"
        android:layout_marginTop="80dp"
        android:text="  Voltar  " />

    <Button
        android:id="@+id/editarInfoOkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancelarButton"
        android:layout_alignBottom="@+id/cancelarButton"
        android:layout_alignLeft="@+id/editTextValorComb"
        android:text="     Ok     " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Adicionar informações do carro a lista:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp" />

</RelativeLayout>