<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="37dp"
        tools:listitem="@android:layout/simple_list_item_single_choice" >

    </ListView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Modelos de carros:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/okBtLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="25dp"
        android:text="      Ok      " />

    <Button
        android:id="@+id/cancelarListaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/okBtLista"
        android:layout_alignBottom="@+id/okBtLista"
        android:layout_alignRight="@+id/listView1"
        android:layout_marginRight="30dp"
        android:text="Cancelar" />

</RelativeLayout>